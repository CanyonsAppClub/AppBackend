{
    "calendar":{
        "events":[
            {% for event in events %}
            {
                    "id":{{ event.id }},
                    "time_period":"{{ event.start_date|date:"D, M d fa" }} - {{ event.end_date|date:"fa" }}",
                    "location":"{{ event.location }}",
                    "location_id":"{{ event.location.id }}",
                    "title":"{{ event.event_title }}",
                    "subtitle":"{{ event.event_subtitle }}"
            }
            {% if not forloop.last %},{% endif %}
            {% endfor %}
        ]
    }
}